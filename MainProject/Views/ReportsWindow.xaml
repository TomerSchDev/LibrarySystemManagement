<Window x:Class="Library_System_Management.Views.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Library_System_Management.Views"
        mc:Ignorable="d"
        Title="ReportsWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Name="DgReports" AutoGenerateColumns="False" Grid.Row="0" Margin="0,0,0,10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Report ID" Binding="{Binding ReportID}" />
                <DataGridTextColumn Header="SeverityLevel" Binding="{Binding SeverityLevelString}" />
                <DataGridTextColumn Header="Report Date" Binding="{Binding ActionDate}" />
                <DataGridTextColumn Header="User ID" Binding="{Binding Userid}" />
                <DataGridTextColumn Header="Username" Binding="{Binding User}" />
                <DataGridTextColumn Header="User Role" Binding="{Binding RoleString}" />
                <DataGridTextColumn Header="Report Message" Binding="{Binding ReportMessage}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
