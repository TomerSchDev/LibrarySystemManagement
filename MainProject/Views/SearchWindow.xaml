<Window x:Class="Library_System_Management.Views.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search box -->
        <TextBox Name="TxtSearch" Width="400" Height="30" Margin="0,0,0,10"
                 VerticalAlignment="Top" 
                 TextChanged="TxtSearch_TextChanged"/>


        <!-- Books Results -->
        <GroupBox Grid.Row="1" Header="Books" Padding="5" Margin="0,0,0,10">
            <DataGrid Name="dgBooks" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding BookID}" Width="60"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="150"/>
                    <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="120"/>
                    <DataGridTextColumn Header="Available" Binding="{Binding Available}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Members Results -->
        <GroupBox Grid.Row="2" Header="Members" Padding="5">
            <DataGrid Name="dgMembers" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding MemberID}" Width="60"/>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
