<Window x:Class="Library_System_Management.Views.ExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Library_System_Management.Views"
        mc:Ignorable="d"
        Title="ExportDialog" Height="200" Width="800">
    <StackPanel Margin="16">
        <TextBlock Text="File Name:" Margin="0,0,0,5"/>
        <TextBox Name="txtFileName" Width="220" Margin="0,0,0,8"/>

        <TextBlock Text="Export Type:" Margin="0,0,0,5"/>
        <ComboBox Name="cbExportTypes" Width="220" Margin="0,0,0,12"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Export" Width="60" Margin="5,0,0,0" IsDefault="True" Click="BtnExport_Click"/>
            <Button Content="Cancel" Width="60" Margin="5,0,0,0" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
