<Window x:Class="Library_System_Management.Views.PopUpDialogs.AddIssueBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Library_System_Management.Views"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
        Title="AddIsuueBook" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Select Member" FontWeight="Bold"/>
            <ComboBox Name="cmbMembers" DisplayMemberPath="Title" SelectedValuePath="MemberID" Margin="0,5"/>
            <TextBlock Text="Select Book" FontWeight="Bold"/>
            <ComboBox Name="cmbBooks" DisplayMemberPath="Title" SelectedValuePath="BookID" Margin="0,5"/>
            
            <TextBlock Text="Borrow Date"/>
            <DatePicker Name="dpBorrowDate" SelectedDate="{x:Static sys:DateTime.Now}" Margin="0,5"/>

            <TextBlock Text="Expected Return Date"/>
            <DatePicker Name="dpReturnDate" Margin="0,5"/>

            <Button Content="Confirm" HorizontalAlignment="Right" Width="100" Margin="0,10,0,0" 
                    Click="BtnConfirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
