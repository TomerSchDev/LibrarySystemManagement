<Window x:Class="Library_System_Management.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="220" Width="350">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Username"/>
            <TextBox Name="txtUsername" Margin="0,0,0,10"/>
            
            <Label Content="Password"/>
            <PasswordBox Name="txtPassword" Margin="0,0,0,10"/>
            
            <Button Content="Login" Click="BtnLogin_Click" Height="30"/>
            <Button Content="Connect To Server" Click="BtnConnectServer" Width="100" Margin="0,10,0,0"></Button>
        </StackPanel>
    </Grid>
</Window>