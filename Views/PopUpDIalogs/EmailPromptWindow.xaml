<Window x:Class="Library_System_Management.Views.PopUpDIalogs.EmailPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Library_System_Management.Views.PopUpDIalogs"
        mc:Ignorable="d"
        Title="Email Prompt Window" Height="450" Width="800">
    <StackPanel Margin="16">
        <TextBlock Text="Recipient Email Address:" Margin="0,0,0,5"/>
        <TextBox x:Name="TxtEmail" Width="240" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" IsDefault="True" Margin="5,0,0,0" Click="BtnOk_Click"/>
            <Button Content="Cancel" Width="60" IsCancel="True" Margin="5,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
