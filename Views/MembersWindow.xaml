<Window x:Class="Library_System_Management.Views.MembersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Library_System_Management.Views"
        mc:Ignorable="d"
        Title="MemberWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Name="DgMembers" AutoGenerateColumns="False" Grid.Row="0" Margin="0,0,0,10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding MemberID}" />
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Add Member" Width="100" Margin="5" Click="BtnAdd_Click"/>
            <Button Content="Select Member" Width="100" Margin="5" Click="BtnSelect_Click"/>
            <Button Content="Export" Width="100" Margin="5" Click="BtnExport_Click"/>
            <Button Content="Edit Member" Width="100" Margin="5" Click="BtnEdit_Click"/>
            <Button Content="Delete Member" Width="100" Margin="5" Click="BtnDelete_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
