<Window x:Class="Library_System_Management.Views.AddNewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Library_System_Management.Views"
        mc:Ignorable="d"
        Title="Add new User" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Select Role" FontWeight="Bold"/>
            <ComboBox Name="cmbRoles"  Margin="0,5"/>
            
            <Label Content="Username"/>
            <TextBox Name="TxtUsername" Margin="0,5"/>

            <Label Content="Password"/>
            <PasswordBox Name="TxtPassword" Margin="0,5"/>

            <Button Content="Confirm" HorizontalAlignment="Right" Width="100" Margin="0,10,0,0" 
                    Click="BtnConfirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
