<Window x:Class="Library_System_Management.Views.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Library_System_Management.Views"
        mc:Ignorable="d"
        Title="UsersWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="dgUsers" AutoGenerateColumns="False" Grid.Row="0" Margin="0,0,0,10" IsReadOnly="True"
                  MouseDoubleClick="dgUsers_MouseDoubleClick">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserID}" Width="50"/>
                <DataGridTextColumn Header="Role" Binding="{Binding UserRuleToString}" Width="*"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="2*"/>
                
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Add User" Width="100" Height="40" Margin="5" Click="BtnAdd_Click"/>
        </StackPanel>
    </Grid>
</Window>
