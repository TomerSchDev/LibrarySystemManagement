<Window x:Class="Library_System_Management.Views.AddEditMemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Library_System_Management.Views"
        mc:Ignorable="d"
        Title="AddEditMember" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Full Name"/>
            <TextBox Name="TxtName" Margin="0,5"/>

            <Label Content="Email"/>
            <TextBox Name="TxtEmail" Margin="0,5"/>

            <Label Content="Phone"/>
            <TextBox Name="TxtPhone" Margin="0,5"/>

            <Button Content="Save" Margin="0,10" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
