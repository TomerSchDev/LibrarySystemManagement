<Window x:Class="Library_System_Management.Views.UserInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Library_System_Management.Views"
        mc:Ignorable="d"
        Title="User Info" Height="450" Width="800">
    
    <Grid Margin="20" RowSpan="2">
        <GroupBox Grid.Row="0" Header="User Information:" FontSize="16" FontWeight="Bold">
            <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                    <StackPanel>
                        <TextBlock Text="Username:" Width="90" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding SelectedUser.Username, Mode=OneWay}" IsReadOnly="True" Width="200"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Password:" Width="90" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding DisplayPassword, Mode=OneWay}" IsReadOnly="True" Width="200"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="User Role:" Width="90" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding SelectedUser.UserRoleToString, Mode=OneWay}" IsReadOnly="True" Width="200"/>
                    </StackPanel>
                <CheckBox Content="Show" Margin="10,18,0,0"
                          IsChecked="{Binding ShowPassword, Mode=TwoWay}"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="Users Records" Margin="0,100,0,0">
            <DataGrid ItemsSource="{Binding RecordsHistory}" AutoGenerateColumns="False"
                      CanUserAddRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Report ID" Binding="{Binding ReportID}" Width="*"/>
                    <DataGridTextColumn Header="Report Date" Binding="{Binding ActionDate}" Width="*"/>
                    <DataGridTextColumn Header="Severity Level" Binding="{Binding SeverityLevelString}" Width="50"/>
                    <DataGridTextColumn Header="Report Message" Binding="{Binding ReportMessage}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
